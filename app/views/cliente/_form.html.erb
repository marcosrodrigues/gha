<%= form_for @cliente, :url => {:action => action} do |f| -%>
  <fieldset>
    <legend>title</legend>
    <table border="0" cellpadding="0" cellspacing="0"  id="id-form">
      <tr>
        <th valign="top"><%= f.label :codigo %></th>
        <td><%= f.text_field :codigo %></td>
      </tr>
      <tr>
        <th valign="top"><%= f.label :nome %></th>
        <td><%= f.text_field :nome %></td>
      </tr>
      <tr>
        <th valign="top"><%= f.label :sexo %></th>
        <td><%= f.select :sexo, Cliente::SEXO %></td>
      </tr>
      <tr>
        <td colspan="3"><%= f.submit "Salvar" %></td>
      </tr>
      <tr>
        <td colspan="3"><%= link_to "Cancelar", cliente_index_path %></td>
      </tr>
    </table>
  </fieldset>
<% end -%>

