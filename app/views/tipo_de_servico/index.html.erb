<h1>Tipos de Serviços</h1>

<script>
	$(function() {
	  $.ajaxSetup({
      beforeSend: function(xhr) {
        xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'));
      }
    });

	  $('a.delete').click(function() {
		  row = $(this).parent().parent();
      if ( confirm("Deseja excluir este tipo de serviço?") )
          $.ajax({
              url: this.href.replace('/destroy', ''),
              type: 'post',
              dataType: 'script',
              data: { '_method': 'delete' },
              success: function() {
                row.remove();
              }
          });

      return false;
    });
	});
</script>

<% if flash[:notice] %>
<p class="msg done"><%= notice %></p>
<% end %>

<%= link_to "Novo", new_tipo_de_servico_path %>

<table>
  <thead>
    <tr>
      <th>Código</th>
      <th>Nome</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @tipos_de_servicos.each do |tipo_de_servico| %>
  <tr>
    <td><%= tipo_de_servico.codigo %></td>
    <td><%= tipo_de_servico.nome %></td>
    <td><%= link_to "Editar", edit_tipo_de_servico_path(tipo_de_servico) %></td>
    <td><%= link_to "Excluir", tipo_de_servico, :class => "delete" %></td>
  </tr>
  <% end %>
  </tbody>
</table>

