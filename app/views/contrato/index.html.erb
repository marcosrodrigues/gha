<h1>Contratos</h1>

<% if flash[:notice] %>
<div id="message-green">
  <table border="0" width="100%" cellpadding="0" cellspacing="0">
  <tr>
	  <td class="green-left"><%= notice %></td>
	  <td class="green-right"><img src="/images/icon_close_green.gif" alt="" /></td>
  </tr>
  </table>
</div>
<% end %>

<%= link_to "", new_contrato_path, :class => "add-link" %>

<script>
	$(function() {
		$('#grid').dataTable({
		  "bJQueryUI": true,
			"sPaginationType": "full_numbers"
		});
	});
</script>

