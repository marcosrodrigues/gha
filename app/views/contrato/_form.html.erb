<script>
	$(function() {
		$(".date-edit").datepicker({ dateFormat: 'dd/mm/yy' });
	});
</script>
<%= form_for @contrato, :url => {:action => action} do |f| -%>
  <fieldset>
    <legend>title</legend>
    <table border="0" cellpadding="0" cellspacing="0"  id="id-form">
      <tr>
        <th valign="top"><%= f.label :codigo %></th>
        <td><%= f.text_field :codigo %></td>
      </tr>
      <tr>
        <th valign="top"><%= f.label :cliente_id %></th>
        <td><%= f.select :cliente_id, @clientes, :prompt => "Selecione..." %></td>
      </tr>
      <tr>
        <th valign="top"><%= f.label :data %></th>
        <td><%= f.text_field :data, :id => "data", :class => "date-edit" %></td>
      </tr>
      <tr>
        <td colspan="3"><%= f.submit "Salvar" %></td>
      </tr>
      <tr>
        <td colspan="3"><%= link_to "Cancelar", contrato_index_path %></td>
      </tr>
    </table>
  </fieldset>
<% end -%>

